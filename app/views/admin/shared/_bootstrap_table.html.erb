<table class="table table-bordered table-hover">
  <thead class="thead">
    <tr>

      <% columns.each do |column| %>
        <th><%= column[:label] %></th>
      <% end %>

    </tr>
  </thead>

  <tbody>
    

      <% rows.each do |row| %>
        <tr>

          <% columns.each do |column| %>

            <% if column[:association_field] %>
              <th><%= row.send(column[:field]).send(column[:association_field]) %></th>
            <% else %>
              <th><%= row.send(column[:field]) %></th>
            <% end %>

          <% end %>
        </tr>
        
      <% end %>
    
  </tbody>
</table>